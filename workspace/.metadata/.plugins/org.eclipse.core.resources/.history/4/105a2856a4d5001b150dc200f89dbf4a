package work;

import java.util.Scanner;

public class Test3 {
	public static void main(String[] args) throws WeightException {
		Scanner scanner = new Scanner(System.in);
		System.out.println("请输入学生的体重：");
		int weight = scanner.nextInt();
		if(weight >= 70 && weight <= 200){
			System.out.println("体重合格，该学生的体重为：" + weight);
		}else{
			throw new WeightException("体重不合格，该学生的体重为：" + weight);
		}
		
	}
}


class WeightException extends Exception{
	static final long serialVersionUID = -7034897190745766939L;
	String message;
	
	WeightException(int m){
		message="体重为：" + m + "不符合要求";
	}
	
	public String warnMess(){
		return message;
	}
	
}

class InputWeight{
	int weight;
	
	public void getWeight(int i) throws WeightException{
		if (i < 70 || i >200){
			throw new WeightException(i);
		}
		System.out.println("该学生的体重为：" + i);
	}
	public int getW(){
		return weight;
	}
}

